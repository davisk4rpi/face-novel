<h1><%= @user.name %></h1>
<p>Email: <%= @user.email %></p>
<% if @user == current_user %>
  <%= link_to "Edit", edit_user_registration_path %>
<% end %>
<h2>Posts</h2>
<% @posts.each do |post| %>
  <div class="well">
    <p><%= post.content %></p>
    <p><em>Posted <%= time_ago_in_words(post.created_at)%> ago</em></p>
  </div>
<% end %>
